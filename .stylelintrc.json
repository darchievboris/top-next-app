{
  "extends": [
    "stylelint-config-standard",
    "stylelint-config-clean-order"
  ],
  "plugins": [
    "stylelint-order"
  ],
  "rules": {
    "declaration-block-no-redundant-longhand-properties": null,
    "selector-class-pattern": [
      "^[a-zA-Z][a-zA-Z0-9]*$",
      {
        "message": "Class name should be camelCase",
        "severity": "error"
      }
    ]
  }
}
